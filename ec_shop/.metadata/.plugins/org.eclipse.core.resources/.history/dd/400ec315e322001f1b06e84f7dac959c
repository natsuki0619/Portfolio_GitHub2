package com.example.ecshop.controller;

import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

import com.example.ecshop.Repository.GoodsRepository;
import com.example.ecshop.entity.Goods;

@Controller
public class HomeController {
	
 private final GoodsRepository goodsRepository;        
     
     public HomeController(GoodsRepository houseRepository) {
         this.goodsRepository = houseRepository;            
     }    
	
	@GetMapping("/")
	 public String index(Model model) {
        List<Goods> newgoods = goodsRepository.findTop10ByOrderByCreatedAtDesc();
        model.addAttribute("newgoods", newgoods);    
		return "index";
	}

}
